@model WebApplication.Models.FeedbackModel
           
@{
    ViewBag.Title = WebApplication.Resources.Feedback.Index.Title;
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@WebApplication.Resources.Feedback.Index.Title</legend>

        <div class="editor-label">
            @Html.Label(WebApplication.Resources.Common.EmailAddress)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EmailAddress)
            @Html.ValidationMessageFor(model => model.EmailAddress)
        </div>

        <div class="editor-label">
            @Html.Label(WebApplication.Resources.Common.Content)
        </div>
        <div class="editor-field">
            @Html.SimpleTextAreaFor(model => model.Message)
            @Html.ValidationMessageFor(model => model.Message)
        </div>
        <div class="editor-label">
            @Html.Label(WebApplication.Resources.Feedback.Index.VerificationCode)
        </div>
        <div class="editor-field">
            <img src="/Feedback/ShowCaptchaImage" alt="captcha" />
            <br />
            @WebApplication.Resources.Feedback.Index.VerificationMessage
            @Html.EditorFor(model => model.CaptchaText)
            @Html.ValidationMessage("CaptchaError")
        </div>

        <p>
            <input type="submit" value="@WebApplication.Resources.Common.Send" />
        </p>
    </fieldset>
}
