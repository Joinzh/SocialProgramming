@using MvcGlobalisationSupport;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @(Html.Telerik().StyleSheetRegistrar()
        .DefaultGroup(group => group
            .Add("telerik.common.css")
            .Add("telerik.sunset.min.css"))
    )
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery-ui-1.8.12.custom.css")" rel="stylesheet" type="text/css" />
    @RenderSection("AdditionalCss", false)
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.6.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.12.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.tagcanvas.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            if (!$('#myCanvas').tagcanvas({
                textColour: '#000000',
                outlineColour: '#ff0000',
                outlineMethod: 'colour',
                reverse: true,
                depth: 0.8,
                maxSpeed: 0.05
            }, 'tags')) {
                // something went wrong, hide the canvas container
                $('#myCanvasContainer').hide();
            }
        });
    </script>
    @RenderSection("AdditionalScripts", false)
    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-32352878-1']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

    </script>
</head>
<body>
    <img src="@Url.Content("~/Content/themes/main/bg.jpg")" alt="background" id="image-bg" />
    <div id="wrapper">
        <div id="top-menu">
        </div>
        <div id="header">
            <ul id="nav">
                <li class="nav_icon"><a href="@Url.Action("Index", "Home", null)"><span class="ui-icon ui-icon-home">
                </span>@WebApplication.Resources.Common.Home</a></li>
                <li class="@{if ("Admin" == (string)ViewContext.RouteData.Values["controller"])
                             { <text>nav_current </text>}}"><a href="@Url.Action("Index", "Admin", null)">
                                 @WebApplication.Resources.Common.Admin</a></li>
                <li class="@{if ("Feedback" == (string)ViewContext.RouteData.Values["controller"])
                             { <text>nav_current </text>}}"><a href="@Url.Action("Index", "Feedback", null)">
                                 @WebApplication.Resources.Common.Feedbacks</a></li>
                <li class="@{if ("Entry" == (string)ViewContext.RouteData.Values["controller"])
                             { <text>nav_current </text>}}"><a href="@Url.Action("Index", "Entry", null)">
                                 @WebApplication.Resources.Common.Entries</a></li>
            </ul>
        </div>
        <div id="content_pad">
            <div id="modules">
                @Html.Partial("_Modules")
            </div>
            @RenderBody()
        </div>
    </div>
    <footer>
        <div style="width: 600px; text-align: center; margin: 0 auto 0 auto; padding: 30px 0 0 0; color: #ccc; font-weight: bold;">
            SocialProgramming Blog | www.socialprogramming.apphb.com | Tested on: Chrome, Opera, Firefox
            <p>
            Nawanat Triamjangarun - "I don't know why people still consider about develop website to support IE just do not care it. People who use IE are not deserved to see your site bro."
            </p>
        </div>
    </footer>
</body>
</html>
