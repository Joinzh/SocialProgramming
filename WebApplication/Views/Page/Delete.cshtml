@model WebApplication.Page

@{
    ViewBag.Title = WebApplication.Resources.Common.Page + " - " + WebApplication.Resources.Common.Delete;
    ViewBag.PageTitle = WebApplication.Resources.Common.Pages;
}

@using (Html.BeginForm("Delete", "Page", FormMethod.Post, new { @Class = "form label-inline uniform" }))
{
    <div class="content_pad">
        <h3>@WebApplication.Resources.Common.Delete</h3>
        <h4>@WebApplication.Resources.Common.DeleteConfirm</h4>
@{ Html.Telerik().TabStrip()
            .Name("TabStrip")
            .Effects(fx =>
            {
                fx.Expand();
                fx.Opacity();
                fx.OpenDuration(200)
                .CloseDuration(200);
            })
            .Items(tabstrip =>
            {
                tabstrip.Add()
                        .Text("Magyar")
                        .Content(@<text>
            <div class="field">
                @Html.LabelFor(model => model.huTitle, "Magyar cím")
                <span class="content">
                    @Html.DisplayFor(model => model.huTitle)
                </span>
            </div>
            <div class="field">
                @Html.LabelFor(model => model.huContent, "Magyar tartalom")
                <span class="content">
                    @Html.Raw(HttpUtility.HtmlDecode(Model.huContent))
                </span>
            </div>
            </text>).Selected(true);
                tabstrip.Add()
                        .Text("English")
                        .Content(@<text>
            <div class="field">
                @Html.LabelFor(model => model.enTitle, "English title")
                <span class="content">
                    @Html.DisplayFor(model => model.enTitle)
                </span>
            </div>
            <div class="field">
                @Html.LabelFor(model => model.enContent, "English content")
                <span class="content">
                    @Html.Raw(HttpUtility.HtmlDecode(Model.enContent))
                </span>
            </div>
            </text>);
            })
            .Render();
        }
    </div> 
    <div class="content_pad">
        <input type="submit" value="@WebApplication.Resources.Common.Delete" />
        @Html.ActionLinkButton(Url, "Index", "Page", null, WebApplication.Resources.Common.BackToList)
    </div>
}